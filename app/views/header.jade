doctype
html
    head
        meta(charset="utf-8")
        title Blog
        link(href="/css/style.css", rel="stylesheet")
    body
        header
            h1 #{title}
        nav
            span
                a(title="主页" href="/") home
            span
                a(title="存档" href="/archive") archive
            span
                a(title="标签" href="/tags") tags
            span
                a(title="友情链接" href="/links") links
            if user
                span
                    a(title="上传" href="/upload") upload
                span
                    a(title="发表" href="/post") post
                span
                    a(title="登出" href="/logout") logout
            else
                span
                    a(title="登录" href="/login") login
                span
                    a(title="注册" href="/reg") register
            span
                form(method="get" action="/search")
                    input.search(type="text" name="keyword" placeholder="SEARCH")
        article
            if success
                div #{success}
            if error
                div #{error}
            block content
