extends header

block content
    for item in posts
        p
            h2
                a(href="/u/#{item.name}/#{item.time.day}/#{item.title}") #{item.title}
        p.info
            | 作者：
            a(href="/u/#{item.name}") #{item.name}
            | &nbsp;| 日期：#{item.time.minute}
        p !{item.post}


