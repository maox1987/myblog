extends header

block content
    for post in posts
        p
            h2
                a(href="/u/#{post.name}/#{post.time.day}/#{post.title}") #{post.title}
            p.info
                | 作者：
                a(href="/u/#{post.name}") #{post.name}
                | &nbsp;| 日期：#{post.time.minute}
            p !{post.post}