extends header

block content
    for item in articles
        p
            h2
                a(href="/article/#{item._id}") #{item.title}
            p.info
                | 作者：
                a(href="/u/#{item.author}") #{item.author}
                | &nbsp;| 日期：#{item.meta.createAt.toString("yyyy/MM/dd")}
            p #{item.content}